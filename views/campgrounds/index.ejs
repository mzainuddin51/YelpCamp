<% include ../partials/header%>

<div class="container">   
    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <p>View our handpicked camp-grounds from all over the world</p>
        <p > <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Camp</a> </p>
    </header>



<div class="row text-center">
<% for(var i=0;i<campgrounds.length;i++){%>
        <div class="col-md-4 col-sm-6">  
            <div class="thumbnail">
                  <img src=    <%= campgrounds[i].image%>  > 
            <div class="caption">
                <h3><%= campgrounds[i].name%></h3>
            </div>
            <p> <a href="/campgrounds/<%=campgrounds[i]._id %>" class="btn btn-primary">More info</a> </p>
            </div>
        </div>
    <%}%>
    </div>
    </div>
<% include ../partials/footer%>